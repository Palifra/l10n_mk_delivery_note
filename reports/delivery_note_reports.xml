<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Action for Испратница/Приемница -->
    <record id="action_report_delivery_note_mk" model="ir.actions.report">
        <field name="name">Испратница/Приемница</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_mk_delivery_note.report_delivery_note_mk</field>
        <field name="report_file">l10n_mk_delivery_note.report_delivery_note_mk</field>
        <field name="print_report_name">'Испратница_%s' % (object.name).replace('/', '_')</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Action for Испратница/Приемница со Цени -->
    <record id="action_report_delivery_note_mk_with_prices" model="ir.actions.report">
        <field name="name">Испратница/Приемница со Цени</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_mk_delivery_note.report_delivery_note_mk_with_prices</field>
        <field name="report_file">l10n_mk_delivery_note.report_delivery_note_mk_with_prices</field>
        <field name="print_report_name">'Испратница_со_цени_%s' % (object.name).replace('/', '_')</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
