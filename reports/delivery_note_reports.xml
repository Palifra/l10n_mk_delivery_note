<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Action for Испратница (Outgoing) -->
    <record id="action_report_delivery_note_mk_outgoing" model="ir.actions.report">
        <field name="name">Испратница</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_mk_delivery_note.report_delivery_note_mk</field>
        <field name="report_file">l10n_mk_delivery_note.report_delivery_note_mk</field>
        <field name="print_report_name">'Испратница_%s' % (object.name).replace('/', '_')</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">form,list</field>
    </record>

    <!-- Data to set domain for outgoing report -->
    <function model="ir.actions.report" name="write">
        <value eval="[ref('action_report_delivery_note_mk_outgoing')]"/>
        <value eval="{'domain': [('picking_type_id.code', '=', 'outgoing')]}"/>
    </function>

